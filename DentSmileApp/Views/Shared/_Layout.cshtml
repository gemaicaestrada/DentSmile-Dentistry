@* DENTAL WEB APP *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DentSmile Dentistry</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/dentappcustom")
    <link rel="stylesheet" href="~/Content/dentappcustom.css">
</head>
<body>
    <div class="navbar @*navbar-inverse*@ navbar-fixed-top" style="background-color:#429F9E;" >
        <div class="container" style="background-color:#429F9E;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home", null)">
                    <img src="~/Content/img/logo/DENTSMILE DENTISTRY.png" height="50"/>
                </a>
                @*@Html.ActionLink("DentSmile Dentistry", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-dark">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("New Patient", "NewPatient", "Home")</li>
                    <li>@Html.ActionLink("Office Information", "officeinformation", "Home")</li>
                    <li>@Html.ActionLink("Treatment Plans", "TreatmentPlans", "Home")</li>
                    <li>@Html.ActionLink("Free Consultation", "DentalOnlineInquiry", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DentSmile Dentistry</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
